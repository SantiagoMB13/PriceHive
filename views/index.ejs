        <button type="submit">Buscar</button>
    </form>
    <% if(contentAmazon) { %>
        <img src="<%= contentAmazon.image %>" alt="no se" height="100px" width="100px">
        <div><%- contentAmazon.image %></div>
        <h2><%= contentAmazon.title %></h2>
        <h3>Precio:</h3> 
        <p><%- contentAmazon.price %></p>
        <h3>Descripci√≥n:</h3>
        <div><%- contentAmazon.description %></div>
