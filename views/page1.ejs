            <a href="<%= content[1].url %>" target="_blank">
                <button class="btn mtop">Comprar</button>
            </a>
        </div>
        <% } %>
        </div>
        <div class="productrow">
        <% if(content[2]) { %>
            <div class="productitem">
            <div><%- content[2].image %></div>
            <h2><%= content[2].title %></h2>
            <div class="contprecio"><%- content[2].price %></div>
            <h3>Descripción:</h3>
            <div><%- content[2].description %></div>
            <h3>Especificaciones:</h3>
            <div class="especificaciones"><%- content[2].specifications %></div>
            <h3>Tienda:</h3>
            <div><%- content[2].seller %></div>
            <a href="<%= content[2].url %>" target="_blank">
                <button class="btn mtop">Comprar</button>
            </a>
            </div>
        <% } %>
        <% if(content[3]) { %>
