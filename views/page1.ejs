            <h2><%= content[3].title %></h2>
            <div class="contprecio"><%- content[3].price %></div>
            <h3>Descripción:</h3>
            <div><%- content[3].description %></div>
            <h3>Especificaciones:</h3>
            <div class="especificaciones"><%- content[3].specifications %></div>
            <h3>Tienda:</h3>
