                    <div><%- content[10].image %></div>
                    <h2><%= content[10].title %></h2>
                    <div class="contprecio"><%- content[10].price %></div>
                    <h3>Descripción:</h3>
                    <div class="description" id="description-10">
                        <div class="text-content"><%- content[10].description %></div>
                    </div>
                    <span class="more-button" onclick="toggleContent('description-10')">Leer más</span>
                    <h3>Especificaciones:</h3>
                    <div class="especificaciones" id="especificacion-10">
                        <div class="especificacion-text"><%- content[10].specifications %></div>
                    </div>
                    <span class="more-button" onclick="toggleContent('especificacion-10')">Leer más</span>
                    <h3>Tienda:</h3>
                    <div><%- content[10].seller %></div>
                    <a href="<%= content[10].url %>" target="_blank">
