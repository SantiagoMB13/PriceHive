    <header>
        <img class="logo" src="assets/images/logo.png" alt="Imagen logo" onclick="navigateToMain()">
        <h1>PriceHive</h1>
        <form action="/loading" method="post">
            <input type="text" name="productName" placeholder="Ingrese el producto a buscar">
            <input type="hidden" name="order" value="<%= order %>">
            <button type="submit">Buscar</button>
        </form>
    </header>
